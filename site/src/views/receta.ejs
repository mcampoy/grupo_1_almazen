                    <!-- Receta -->
                    <section class="col-12 col-lg-6 descripcion-receta">
                        <div class="encabezado-receta">
                            <p class="categoria-receta">
                                <%= receta.diet %>
                            </p>
                            <h3 class="titulo-receta mb-2">
                                <%= receta.name %>
                            </h3>
                            <span class="tiempo-coccion"><i class="far fa-clock"></i> <span class="reloj">
