<!DOCTYPE html>
<html lang="es">

<head>
    <%- include("partials/head", {title: "Agregar producto"}) %>
</head>

<body>

    <div class="container-fluid ">

        <!-- HEADER -->
        <%- include("partials/header", {usuarioLogueado: usuarioLogueado}) %>
            <!-- /HEADER -->

            <!-- Admin product -->
            <div class="row  carga_producto pb-5 justify-content-around">
                <h2 class="col-12 row justify-content-center  pageTitle">Carga de Productos</h2>

                <!-- COLUMNA 1 - LISTADO DE PRODUCTOS  -->
                <div class=" left-column col-sm-5  col-md-8 col-lg-3">
                    <div class="selectorProductos">
                        <div class="listaProductos col-12">
                            <table id="tablaProductos">
                                <tr class="header">
                                    <th class="thCodigo">Código</th>
                                    <th class="thProducto">Producto</th>
                                    <th class="thPrecio">Precio</th>
                                </tr>
                                <% products.forEach(producto => { %>
                                    <tr class="filaProducto">
                                        <td class="tdId">
                                            <%= producto.id %>
                                        </td>
                                        <td class="tdCodigo">
                                            <%= producto.code %>
                                        </td>
                                        <td class="tdNombre">
                                            <%= producto.name %>
                                        </td>
                                        <td class="tdPrecio">
                                            <%= producto.price %>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </table>
                        </div>
                        <div class="form-group col-12">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" id="buscarLabel"> <i class="fas fa-search"></i>  </label>
                                </div>
                                <input type="text" class="form-control text-left" id="searchInput" onkeyup="buscar()" placeholder="Filtrar...">
                            </div>
                        </div>
                        <div class="col-12 row form-group justify-content-around">
                            <button id="btnNuevo" class="col-3 blanco align-items-center justify-content-center" role="button" type="button" onclick="crear()">Nuevo</button>
                            <button id="btnBorrar" class="col-3  align-items-center justify-content-center" role="button" type="button" data-toggle="modal" data-target="#modalBorrar">Borrar</button>
                            <button id="btnEditar" class="col-3 btn align-items-center justify-content-center" type="button" role="button" onclick="editar()">Editar</button>
                        </div>

                        <!-- Modal de confirmación de borrado de producto-->
                        <div class="modal modalBorraProducto fade" id="modalBorrar" tabindex="-1" role="dialog">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h2 class="modal-title d-inline-block">Confirmación</h2>
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    </div>
                                    <div class="modal-body text-center">
                                        <p>¿Seguro quiere borrar el producto?</p>
                                    </div>
                                    <div class="modal-footer text-center justify-content-center">
                                        <button id="btnConfCancelar" type="button" class="btn blanco btn-secondary col-3" data-dismiss="modal">Cancelar</button>
                                        <form class="col-3" id="borrarForm" method="POST">
                                            <input name="id" id="idProducto" style="display: none;">
                                            <button id="btnConfBorrar" type="button" value="" class="btn btn-primary" onclick="borrar()">Borrar</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 col-md-12 col-lg-9 iframeDetailsContainer">

                    <iframe id="iframeDetails" class="container-fluid" src="/product/admin/1" frameborder="0" onload='resizeIframe(this)'></iframe>
                </div>

            </div>
            <!-- /Upload product -->

            <!-- FOOTER -->
            <%- include("partials/footer") %>
                <!-- /FOOTER -->

    </div>
    <!-- Fin DIV Container-->

    <script type='text/javascript' src="/js/productAdmin.js">
    </script>
    <script type='text/javascript' src="/js/cart.js"></script>
    <!-- <script type='text/javascript' src="/js/prodAdminValidator.js"> -->
    <!-- </script> -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js">
    </script>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
    </script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous">
    </script>
    <script type='text/javascript' src="/js/userValidator.js"></script>
</body>

</html>