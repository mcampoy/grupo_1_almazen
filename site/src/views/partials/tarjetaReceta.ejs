<!-- PARTIAL DE TARJETA DE RECETA -->

<div class="ladofrente tarjeta-recetas">
        <a href="/recetas/<%= receta.id %>">
           <span class="etiqueta-dieta-receta"> <%= receta.dieta %>  </span>
            <figure class="img-tarjeta-receta">
                <img src="/images/recetas/<%= receta.image %>" alt="<%= receta.nombre %>">
            </figure>
            <h3 class="tituloscard-receta"><%= receta.nombre %></h3>
            <span class='descripcion_receta descripcion_tarjeta_receta'><%= receta.descripcion %></span>
        </a>
    </div>