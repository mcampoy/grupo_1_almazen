<!DOCTYPE HTML>
<html>

<!DOCTYPE html>
<html lang="es">

<head>
    <%- include("partials/head", {title: "Nuestros productos"}) %>
</head>

<body>
    <!-- HEADER -->
    <%- include("partials/header", {usuarioLogueado: usuarioLogueado}) %>
        <!-- /HEADER -->

        <!-- HOT SALE -->
        <%- include("partials/imgHotSale") %>
            <!-- /HOT SALE -->

            <!-- Redes Sociales Flotantes-->
            <%-include('partials/redesSociales') %>

                <div class="row rowContainer caja mb-3">
                    <!-- MENÚ POR CATEGORÍA -->
                    <div class="col-12 col-md-12 col-lg-2 products_categories">
                        <h3 class="categories_title">Dietas</h3>
                        <ul class="categoryList">
                            <% for( let i = 0; i < dietas.length; i++ ) { %>
                                <li class="categories-items">
                                    <!-- <img src="/images/imgCategory/<%= dietas[i].img_category %>"> -->
                                    <a href="/diets/category/<%= dietas[i].id %>" class="categories_names">
                                        <%= dietas[i].name %>
                                    </a>
                                </li>
                                <% } %>
                        </ul>
                    </div>

                    <div class="container col-12 col-md-12 col-lg-10 container-tarjetas-productos mt-5" id="tarjetas">

                        <h3 class="col-12 titulo_seccion tituloProd">
                            <%= diets.name %>
                        </h3>
                        <h3 class="col-12 titulo_seccion tituloProd">
                            Productos
                        </h3>

                        <% for (let product of diets.products) { %>
                            <!-- Verifico que haya stock y que esté habilitado -->
                            <% if (product.stock > 0 && product.enabled == 1) { %>

                                <%- include('partials/productCard', {product}) %>

                                    <% } %>

                                        <% } %>

                                            <div class="caja mb-3">

                                                <div class="container container-tarjetas-recetas mt-5" id="tarjetas">

                                                    <!-- Título de la sección -->
                                                    <h3 class="col-12 titulo_seccion tituloProd">
                                                        Recetas
                                                    </h3>
                                                    <!-- Tarjeta -->
                                                    <% for( let receta of recipe ) { %>

                                                        <% if (receta.diet == diets.name){ %>

                                                            <%- include("partials/tarjetaReceta", {receta}) %>
                                                                <% } %>

                                                                    <% } %>

                                                </div>
                                            </div>
                    </div>

                </div>

                <!-- FOOTER -->
                <%- include("partials/footer") %>
                    <!-- /FOOTER -->
                    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous">
                    </script>
                    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
                    </script>
                    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous">
                    </script>
                    <script type='text/javascript' src="/js/cart.js"></script>
                    <script type='text/javascript' src="/js/productFav.js"></script>
                    <script type='text/javascript' src="/js/userValidator.js"></script>
</body>

</html>